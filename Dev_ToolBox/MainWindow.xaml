<Window x:Class="Dev_ToolBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dev_ToolBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Bar with Tools -->
        <ListBox x:Name="lstTools" SelectionChanged="ToolSelectionChanged">
            <ListBoxItem Content="Percentage Calculator"/>
            <ListBoxItem Content="QR Code Generator"/>
            <!-- Add more tools here -->
        </ListBox>

        <!-- Main Content Area with Frame for Tool Pages -->
        <Frame x:Name="mainFrame" Grid.Column="1"/>
    </Grid>
</Window>
